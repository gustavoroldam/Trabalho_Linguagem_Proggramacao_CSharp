@model Trabalho_Gustavo_Karoline.Models.Consulta

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir</h1>

<h3>Tem certeza?</h3>
<div>
    <h4>Consulta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.paciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.paciente.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.medico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.medico.especialidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento_Injetaveis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medicamento_Injetaveis.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Qtde_Vacina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Qtde_Vacina)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
